@code {
    public PageProductListGuiDto data = new PageProductListGuiDto();
    public OptionsProductListGuiDto options = new OptionsProductListGuiDto();
    public bool IsLoading = false;
    public List<int> PageTake = new List<int>() { 2, 4, 10 };
    public int totalPage = 0;
    public int CurrentActivePage = 1;
    protected override async Task OnInitializedAsync()
    {
        options = new OptionsProductListGuiDto()
            {
                Skip = 0,
                Take = 2,
                SortBy = 1
            };
        await LoadData();
    }
    private async Task LoadData()
    {
        IsLoading = true;
        data = await productListGuiAppService.GetDatasProductListPage(options);
        totalPage = CalculateTotalPage(data.TotalCount, options.Take);
        IsLoading = false;
    }
    private int CalculateTotalPage(int totalRecord, int recordPerPage)
    {
        if (totalRecord <= recordPerPage) return 1;
        return totalRecord / recordPerPage;
    }
    public async Task PageNext()
    {
        options.Skip = options.Take * CurrentActivePage;
        CurrentActivePage++;
        await LoadData();
    }
    public async Task PagePre()
    {
        CurrentActivePage--;
        if (CurrentActivePage > 1)
        {
            options.Skip = options.Take * CurrentActivePage;
        }
        else if (CurrentActivePage == 1)
        {
            options.Skip = 0;
        }
        await LoadData();
    }
    public async Task PageMoveTo(int page)
    {
        CurrentActivePage = page;
        if (CurrentActivePage == 1)
        {
            options.Skip = 0;
        }
        else
        {
            options.Skip = options.Take * (--page);
        }
        await LoadData();
    }
    public async Task TakePageChange(int take)
    {
        options.Take = take;
        if (CurrentActivePage == 1)
        {
            options.Skip = 0;
        }
        else
        {
            options.Skip = options.Take * CurrentActivePage;
        }
        await LoadData();
    }
    public async Task SortPageChange(int sort)
    {
        options.SortBy = sort;
        await LoadData();
    }
    private string GetNameSort()
    {
        switch (options.SortBy)
        {
            case 0: return "Default";
            case 1: return "Price: Low to High";
            case 2: return "Price: High to Low";
            case 3: return "Product Name: a-z";
            case 4: return "Product Name: z-a";
            default: return "ID DESC";
        }
    }
    private void GoProductDetail(int id,bool isRl)
    {
        _navigationManager.NavigateTo($"product-detail/{id}", isRl);
    }
    private void GoShopCart()
    {
        _navigationManager.NavigateTo($"shop-cart", true);
    }
    private void GoHome()
    {
        _navigationManager.NavigateTo($"/", true);
    }
    private void GoAbout()
    {
        _navigationManager.NavigateTo("about", true);
    }
    private void GoProduct()
    {
        _navigationManager.NavigateTo("product-list", true);
    }
}
